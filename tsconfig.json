{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "customConditions": [ "fastly" ],
    "esModuleInterop": true,
    "lib": [ "ES2022" ],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
